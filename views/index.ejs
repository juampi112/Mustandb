<!DOCTYPE html>
<html>

<head>
    <title>Teams</title>
</head>

<body>
    
    <a class="button" href="refresh">Refresh</a>
    <div>
    <table>
        <thead>
            <tr>
                <th>Pos</th>
                <th>Equipo</th>
                <th>PJ</th>
                <th>G</th>
                <th>E</th>
                <th>P</th>
                <th>GF</th>
                <th>GC</th>
                <th>DG</th>
                <th>Pts</th>
            </tr>
        </thead>
        <h2>Grupo A</h2>
        <tbody>
            <% for(var i=0; i < 14; i++) { %>
                <tr class="<%= i == 0 || i == 1 ? 'clasifica' : ((i == 12 || i == 13) ? 'no-clasifica': '') %>">
                    <td class="td-number">
                        <%= teams[i].position %>
                    </td>
                    <td class="td-logo">
                        <img src="<%= teams[i].imgUrl %>">
                        <div>
                            <%= teams[i].team %>
                        </div>
                    </td>
                    <td class="td-number">
                        <%= teams[i].PJ %>
                    </td>
                    <td class="td-number">
                        <%= teams[i].G %>
                    </td>
                    <td class="td-number">
                        <%= teams[i].E %>
                    </td>
                    <td class="td-number">
                        <%= teams[i].P %>
                    </td>
                    <td class="td-number">
                        <%= teams[i].GF %>
                    </td>
                    <td class="td-number">
                        <%= teams[i].GC %>
                    </td>
                    <td class="td-number">
                        <%= teams[i].DG %>
                    </td>
                    <td class="td-number">
                        <%= teams[i].points %>
                    </td>
                </tr>
                <% } %>
                
        </tbody>
    </table>
    <table>
        <thead>
            <tr>
                <th>Pos</th>
                <th>Equipo</th>
                <th>PJ</th>
                <th>G</th>
                <th>E</th>
                <th>P</th>
                <th>GF</th>
                <th>GC</th>
                <th>DG</th>
                <th>Pts</th>
            </tr>
        </thead>
    </div>
        <h2>Grupo B</h2>
        <div>
        <tbody>
            <% for(var i=14; i < 28; i++) { %>
                <tr class="<%= i == 14 || i == 15 ? 'clasifica' : ((i == 27 || i == 26) ? 'no-clasifica': '') %>">
                    <td class="td-number">
                        <%= teams[i].position %>
                    </td>
                    <td class="td-logo">
                        <img src="<%= teams[i].imgUrl %>">
                        <div>
                            <%= teams[i].team %>
                        </div>
                    </td>
                    <td class="td-number">
                        <%= teams[i].PJ %>
                    </td>
                    <td class="td-number">
                        <%= teams[i].G %>
                    </td>
                    <td class="td-number">
                        <%= teams[i].E %>
                    </td>
                    <td class="td-number">
                        <%= teams[i].P %>
                    </td>
                    <td class="td-number">
                        <%= teams[i].GF %>
                    </td>
                    <td class="td-number">
                        <%= teams[i].GC %>
                    </td>
                    <td class="td-number">
                        <%= teams[i].DG %>
                    </td>
                    <td class="td-number">
                        <%= teams[i].points %>
                    </td>
                </tr>
                <% } %>
                
        </tbody>
    </table>
</div>
    <style>
       
        .clasifica{
            background-color: #00b347;
        }
        .no-clasifica {
            background-color: #f00020;
        }
        
        .button {
            color: black;
            text-decoration: none;
            background-color: #EEEEEE;
            padding: 5px;
            border: 1px solid;
            float: right;
        }

        table,
        th,
        td {
            border: 1px solid black;
        }

        .td-logo>img {
            float: left;
        }

        .td-logo>div {
            float: left;
            margin-left: 10px;
            min-width: 200px;
            height: 36px;
            line-height: 36px;
        }

        .td-number {
            text-align: center;
            width: 38px;
        }
    </style>
</body>

</html>
